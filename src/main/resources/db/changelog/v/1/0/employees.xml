<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-employees-table" author="Anton Skachko">
        <createTable tableName="employee">
            <column name="id" type="${uuid_type}" valueComputed="${uuid_function}">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="name" type="varchar(45)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="position" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="salary" type="decimal(8,8)">
                <constraints nullable="false"/>
            </column>
            <column name="company_id" type="${uuid_type}">
                <constraints foreignKeyName="FK_employee" references="company(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
